          script.
             $(function () {
                 connection.getRefData('categoriaservicio','_id','#{(galeriacategoriaservicio?galeriacategoriaservicio.categoriaservicio[0]._id:'')}');
             });
        .form-group
          label(for="foto") Foto
          input.form-control#foto(type="text",placeholder="foto",name="foto",value="#{(galeriacategoriaservicio?galeriacategoriaservicio.foto:'')}")
        .form-group
          label(for="orden") Orden
          input.form-control#orden(type="number",placeholder="orden",name="orden",value="#{(galeriacategoriaservicio?galeriacategoriaservicio.orden:'')}")
        button.btn.btn-primary(type="submit") Accept 
        if galeriacategoriaservicio
          a(href="/galeriacategoriaservicio/#{galeriacategoriaservicio._id}/delete").btn.btn-danger Delete