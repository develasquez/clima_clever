extends layout
block content
  .col-md-8
    ul.nav.nav-pills.nav-justified
      li
        a(href="/galeriacategoriaservicio") Galeriacategoriaservicio
      li.active
        a(href="/galeriacategoriaservicio/new") New
      form(method="POST")
        .form-group
          label(for="categoriaservicio") Categoriaservicio
